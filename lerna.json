{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "changelogPreset": {
    "name": "conventionalcommits",
    "issuePrefixes": ["MOB-"],
    "issueUrlFormat": "https://ftdr.atlassian.net/browse/{{prefix}}{{id}}",
    "commitUrlFormat": "{{host}}/{{owner}}/{{repository}}/commit/{{hash}}",
    "compareUrlFormat": "{{host}}/{{owner}}/{{repository}}/compare/{{previousTag}}...{{currentTag}}",
    "userUrlFormat": "{{host}}/{{user}}",
    "types": [
      { "type": "feat", "section": "Features âœ¨" },
      { "type": "fix", "section": "Bug Fixes ğŸ›" },
      { "type": "test", "section": "Tests ğŸ§ª" },
      { "type": "refactor", "section": "Code Refactoring ğŸ”¨" },
      { "type": "docs", "section": "Documentation ğŸ“š" },
      { "type": "chore", "hidden": true },
      { "type": "revert", "section": "Revert ğŸ”™" }
    ]
  },
  "command": {
    "version": {
      "allowBranch": ["master", "dev"],
      "verifyAccess": false,
      "conventionalCommits": true
    },
    "publish": {
      "allowBranch": ["master", "dev"],
      "verifyAccess": false,
      "createRelease": "gitlab"
    }
  }
}
